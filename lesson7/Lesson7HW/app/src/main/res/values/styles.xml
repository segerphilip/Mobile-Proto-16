<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="PipDark">
        <!-- Customize your theme here. -->
        <!--<item name="colorAccent">@color/colorAccent</item>-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="PipDark" parent="Theme.AppCompat.NoActionBar" >
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:colorBackground">@color/themeLightGrey</item>
        <item name="android:colorForeground">@android:color/background_light</item>
        <item name="colorPrimary">@color/themeLightGrey</item>
        <item name="colorPrimaryDark">@color/themeGrey</item>
        <item name="android:textColorPrimary">@color/primary_text_dark</item>
        <item name="android:windowBackground">@color/themeLightGrey</item>
        <item name="android:textColorSecondaryInverse">@color/secondary_text_light</item>
        <item name="android:textColorPrimaryInverse">@color/primary_text_light</item>
        <item name="android:textColorSecondary">@color/secondary_text_dark</item>
    </style>

</resources>
